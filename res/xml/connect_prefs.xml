<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
    android:title="@string/title_content_services">
    <EditTextPreference 
      android:key="mythtv_service_port"
      android:title="@string/title_mythtv_service_port"
      android:inputType="number"
      android:defaultValue="6544"
      android:layout="@layout/pref" />
  </PreferenceCategory>
  
  <PreferenceCategory
    android:title="@string/title_media_services">
    <com.oakesville.mythling.prefs.SwitchPreference
      android:key="media_services"
      android:switchTextOn="Mythling"
      android:switchTextOff="MythTV"
      android:defaultValue="MythTV"
      android:layout="@layout/sw_pref_inner"
      android:widgetLayout="@layout/prefs_switch" />    
    <EditTextPreference 
      android:key="mythling_web_port"
      android:title="@string/title_mythling_web_port"
      android:dialogMessage="@string/message_mythling_web_port"
      android:inputType="number"
      android:defaultValue="80"
      android:layout="@layout/pref" />
    <EditTextPreference 
      android:key="mythling_web_root"
      android:title="@string/title_mythling_web_root"
      android:dialogMessage="@string/message_mythling_web_root"
      android:defaultValue="mythling"
      android:layout="@layout/pref" />
  </PreferenceCategory>
  
  <PreferenceCategory android:title="@string/title_timeouts">
    <EditTextPreference 
      android:key="tuner_timeout"
      android:title="@string/title_tuner_timeout"
      android:inputType="number"
      android:defaultValue="30"
      android:layout="@layout/pref" />
    <EditTextPreference 
      android:key="transcode_timeout"
      android:title="@string/title_transcode_timeout"
      android:inputType="number"
      android:defaultValue="30"
      android:layout="@layout/pref" />
  </PreferenceCategory>

</PreferenceScreen>
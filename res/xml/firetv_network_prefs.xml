<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/title_mythtv_backend">
        <EditTextPreference
            android:key="mythbe_internal_host"
            android:title="@string/title_backend_host"
            android:dialogTitle="@string/title_backend_host_dialog"
            android:dialogMessage="@string/message_backend_host"
            android:defaultValue="192.168.0.69"
            android:layout="@layout/pref" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/title_content_services">
        <EditTextPreference
            android:key="mythtv_service_port"
            android:title="@string/title_mythtv_service_port"
            android:inputType="number"
            android:defaultValue="6544"
            android:layout="@layout/pref" />
    </PreferenceCategory>
    

</PreferenceScreen>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/title_app_cache">
        <EditTextPreference
            android:key="cache_expiry"
            android:title="@string/title_cache_expiry"
            android:inputType="number"
            android:defaultValue="1440"
            android:layout="@layout/pref" />
        <Preference
            android:key="cache_refresh"
            android:title="@string/title_media_list_cache_refresh"
            android:summary="Clear Data Now"
            android:layout="@layout/pref" />
    </PreferenceCategory>

</PreferenceScreen>
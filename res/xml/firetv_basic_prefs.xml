<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <PreferenceCategory android:title="@string/title_mythtv_backend">
        <EditTextPreference
            android:key="mythbe_internal_host"
            android:title="@string/title_backend_host"
            android:dialogTitle="@string/title_backend_host_dialog"
            android:dialogMessage="@string/message_backend_host"
            android:defaultValue="192.168.0.69"
            android:layout="@layout/pref" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/title_content_services">
        <EditTextPreference
            android:key="mythtv_service_port"
            android:title="@string/title_mythtv_service_port"
            android:inputType="number"
            android:defaultValue="6544"
            android:layout="@layout/pref" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/title_video_player">
        <com.oakesville.mythling.prefs.firetv.FireTvSwitchPreference
            android:key="video_player"
            android:switchTextOn="@string/switch_built_in"
            android:switchTextOff="@string/switch_external_app"
            android:defaultValue="true"
            android:layout="@layout/sw_pref_inner" 
            android:widgetLayout="@layout/prefs_switch" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/title_mythling_version">
      <Preference
          android:key="mythling_version"
          android:title="@string/title_version"
          android:layout="@layout/pref" />
    </PreferenceCategory>
    
</PreferenceScreen>